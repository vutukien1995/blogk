                        <input type="submit" class="search-submit" value="Search">
                    </form>

                    <a href="#0" title="Close Search" class="header__overlay-close">Close</a>

                </div>  <!-- end header__search -->


                <a class="header__toggle-menu" href="#0" title="Menu"><span>Menu</span></a>

                <nav class="header__nav-wrap">

                    <h2 class="header__nav-heading h6">Site Navigation</h2>

                    <ul class="header__nav">
                        <li class="<%if(tab=='home'){%>current<%}%>"><a href="/" title="">Home</a></li>
                        <li class="<%if(tab=='categories'){%>current<%}%> has-children">
                            <a href="#" title="">Categories</a>
                            <ul class="sub-menu">
                            <%for(var i=0; i<categories.length; i++){%>
                                <li><a href="/category/<%=categories[i].name%>/0"><%=categories[i].name%></a></li>
                            <%}%>
                            </ul>
                        </li>
                        <li class="<%if(tab=='blog'){%>current<%}%> has-children">
                            <a href="#" title="">Blog</a>
                            <ul class="sub-menu">
                            <li><a href="/post/create">Create Post</a></li>
                            <li><a href="/image/upload">Upload Image</a></li>
                            <li><a href="/image/list">Image List</a></li>
                            </ul>
                        </li>
                        <li class="<%if(tab=='admin'){%>current<%}%>"><a href="/user/login" title="">Admin</a></li>
                        <li class="<%if(tab=='about'){%>current<%}%>"><a href="/about" title="">About</a></li>
                    </ul> <!-- end header__nav -->

                    <a href="#" title="Close Menu" class="header__overlay-close close-mobile-menu">Close</a>

                </nav> <!-- end header__nav-wrap -->

            </div> <!-- header-content -->
        </header> <!-- header -->