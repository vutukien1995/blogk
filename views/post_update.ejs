<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Summernote</title>

  <link href="/bootstrap/css/bootstrap.css" rel="stylesheet">
  <script src="/js/jquery-3.2.1.min.js"></script> 
  <script src="/bootstrap/js/bootstrap.js"></script>

  <link href="/css/summernote.css" rel="stylesheet">
  <script src="/js/summernote.js"></script>

</head>
<body>
  <div style="margin: auto; width: 900px;">
    <br/><br/>
    <form method="post" action="/post/update">
      <fieldset>
        <div class="form-field">
          <input name="title" type="text" class="form-control" placeholder="Title" value="<%= post.title %>">
        </div>
        <div class="form-field">
          <input name="image" type="text" class="form-control" placeholder="Url" value="<%= post.image %>">
        </div>

        <textarea name="content" id="summernote" class="full-width" placeholder="Content" ><%= post.content %></textarea>

        <h4>Categories: </h4>
        <%for(var i=0; i<categories.length; i++){%>
        <label class="checkbox-inline">
          <input type="checkbox" name="categories" value="<%=categories[i].name%>" 
          <%if(post.categories.includes(categories[i].name)){%>
          checked
          <%}%>
          > <%=categories[i].name%> 
        </label>

        <%if((i+1)%3==0){%>
          <br/>
        <%}%>
        <%}%>
        <br/>
        <br/>

        <input type="hidden" name="id" value="<%=post._id%>" >
        <button type="submit" class="submit btn btn-primary">Submit</button>

      </fieldset>
    </form> <!-- end form -->
  </div>
  

  <script>
    $(document).ready(function() {
        $('#summernote').summernote();
    });
  </script>
</body>
</html>